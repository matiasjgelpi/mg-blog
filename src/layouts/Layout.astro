---
import { createReader } from "@keystatic/core/reader";
import keystaticConfig from "../../keystatic.config";
import ThemeIcon from "../components/ThemeIcon.astro";
const thisYear = new Date().getFullYear();

const reader = createReader(process.cwd(), keystaticConfig);
const homepage = await reader.singletons.homepage.read();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>MG:TO</title>
  </head>
  <body
    class="min-h-screen dark:bg-slate-600 bg-gray-100 flex flex-col justify-between font-monserrat"
  >
    <header class="bg-blue-600 text-white py-4">
      <div class="max-w-4xl mx-auto px-4 flex justify-between items-center">
        <div></div>
        <a href="/">
          <p class="text-3xl font-semibold">
            {homepage?.title}
          </p>
        
        </a>
        <ThemeIcon />

        <!--* dejar esto para el futuro -->
        <!-- <nav class="space-x-4">
				<a href="/" class="hover:underline">Home</a>
				<a href="/blog" class="hover:underline">Blog</a>
				<a href="/about" class="hover:underline">About</a>
			  </nav> -->
      </div>
    </header>
    <slot />
    <footer class="text-center text-gray-600 py-2 bg-gray-200 font-robotoMono">
      © {thisYear} Matías Gelpi | tiene opiniones
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
